				};
				codec {
						mclk-fs = <512>;
						sound-dai = <&es7210_audio_codec_adc0>;
				};
		};

		simple-audio-card,dai-link@2 {          /* I2S - AUDIO SYS CODEC 7210*/
				reg = <2>;
